@model List<User>
@{
    ViewData["title"] = "Tüm Kullanıcıclar";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6"></div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                    <li class="breadcrumb-item active">@ViewData["title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <p>
                            <a asp-action="Create" class="btn btn-secondary"> 
                                <i class="fas fa-plus"></i>
                            </a>
                        </p>
                        @if (Model.Count > 0)
                        {
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Avatar</th>
                                        <th>Kullanıcı Adı</th>
                                        <th>Departman</th>
                                        <th>Kayıt Tarihi</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Where(_ => _.Role != Role.Admin))
                                    {
                                        <tr>
                                            <td>
                                                <img src="~/dist/img/avatars/@item.Avatar" alt="User Avatar" class="img-size-50 mr-3 img-circle">
                                            </td>
                                            <td>@item.Name</td>                                
                                            <td>@item.Department.Name</td>                                            
                                            <td>@item.CreatedAt.ToShortDateString()</td>                                            
                                            <td>
                                                <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Avatar</th>
                                        <th>Kullanıcı Adı</th>
                                        <th>Departman</th>
                                        <th>Kayıt Tarihi</th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                        }
                        else
                        {
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-triangle"></i>
                                <span>Henüz kayıtlı hiçbir kullanıcı yok</span>
                            </div>
                        }

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
