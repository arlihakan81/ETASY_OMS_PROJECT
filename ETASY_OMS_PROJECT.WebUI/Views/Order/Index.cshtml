@model List<Order>
@{
    ViewData["title"] = "Siparişlerimiz";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6"></div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                    <li class="breadcrumb-item active">@ViewData["title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <p>
                            @if (User.FindFirstValue(ClaimTypes.Role) == Role.ExportUser.ToString()
                            || User.FindFirstValue(ClaimTypes.Role) == Role.DomesticUser.ToString())
                            {
                                <a asp-action="Create" class="btn btn-secondary btn-sm">
                                    <i class="fas fa-plus"></i>
                                    Yeni
                                </a>
                            }                            
                        </p>
                        @if (Model.Count > 0)
                        {
                            <p>
                                <a asp-controller="OrderDetail" asp-action="AllDetails" class="btn btn-warning btn-sm">
                                    <i class="fas fa-info"></i> Tüm siparişleri incele
                                </a>
                            </p>
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>FN</th>
                                        <th>Müşteri Adı</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Where(_ => _.Status != Status.Delivered))
                                    {
                                        <tr>
                                            <td>@item.FormId</td>
                                            <td>@item.Customer.Name</td>
                                            <td>
                                                @if(User.FindFirstValue(ClaimTypes.Role) == Role.ExportUser.ToString() 
                                                    || User.FindFirstValue(ClaimTypes.Role) == Role.DomesticUser.ToString())
                                                {
                                                    <a class="btn btn-success btn-sm" asp-controller="OrderDetail" asp-action="Create" asp-route-id="@item.Id">
                                                        <i class="fas fa-plus"></i>
                                                    </a>
                                                    <a class="btn btn-warning btn-sm" asp-action="Update" asp-route-id="@item.Id">
                                                        <i class="fas fa-edit"></i>
                                                    </a>                                                    
                                                }                                                                                                 
                                            </td>
                                        </tr>
                                    } 
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>FN</th>
                                        <th>Müşteri Adı</th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                        }
                        else
                        {
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-triangle"></i>
                                <span>Henüz kayıtlı hiçbir siparişiniz yok</span>
                            </div>
                        }

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
