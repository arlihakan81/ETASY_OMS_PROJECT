@model List<Order>
@{
    ViewData["title"] = "Sevk Edilenler";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6"></div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                    <li class="breadcrumb-item active">@ViewData["title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">                       
                        @if (Model.Where(_ => _.Status == Status.Delivered).Count() > 0)
                        {
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Form No</th>
                                        <th>Müşteri Adı</th>
                                        <th>Adresi</th>
                                        <th>Departman</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Where(_ => _.Status == Status.Delivered))
                                    {
                                        <tr>
                                            <td>@item.FormId</td>
                                            <td>@item.Customer.Name</td>
                                            <td>@item.Customer.Address</td>
                                            <td>@item.Department.Name</td>
                                            <td class="text-success">
                                                <span class="text-success">Sevk</span>
                                                <a asp-controller="OrderDetail" asp-action="Detail" asp-route-id="@item.Id">
                                                    <i class="fas fa-info"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Form No</th>
                                        <th>Müşteri Adı</th>
                                        <th>Adresi</th>
                                        <th>Departman</th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                        }
                        else
                        {
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-triangle"></i>
                                <span>Henüz kayıtlı hiçbir sevk edilen siparişiniz yok!</span>
                            </div>
                        }

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
