@model CreateWarehouseMaterialModel

@{
    ViewData["title"] = "Depo Kaydı";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                    <li class="breadcrumb-item active">@ViewData["title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                <!-- Profile Image -->
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            <img class="profile-user-img img-fluid img-circle"
                                 src="~/dist/img/avatars/@User.FindFirstValue("Avatar")"
                                 alt="User profile picture">
                        </div>
                        <h3 class="profile-username text-center">@User.Identity.Name</h3>
                        @if (User.FindFirstValue(ClaimTypes.Role) == Role.WarehouseClient.ToString())
                        {
                            <p class="text-muted text-center">Depo Sorumlusu</p>
                        }
                        else if (User.FindFirstValue(ClaimTypes.Role) == Role.WarehouseController.ToString())
                        {
                            <p class="text-muted text-center">Depo Yöneticisi</p>
                        }
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
            <div class="col-md-8">
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">@ViewData["title"]</h3>
                    </div>
                    @if (TempData["error"] is not null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-close"></i>
                            <span>@TempData["error"]</span>
                        </div>
                    }
                    else if (TempData["success"] is not null)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-close"></i>
                            <span>@TempData["success"]</span>
                        </div>
                    }
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form asp-action="Create" method="post">
                            <div class="row">
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>MGFN</label>
                                        <input asp-for="@Model.Warehouse.Code" type="text" class="form-control" readonly />
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Açıklama</label>
                                        <textarea asp-for="@Model.Warehouse.Description" class="form-control" rows="4"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row gx-3">
                                <div class="col-12">
                                    <div class="table-responsive">
                                        <table class="table table-bordered" id="orderTable">
                                            <thead>
                                                <tr>
                                                    <th>Ürün Adı</th>
                                                    <th>Gelen Miktar</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model.WarehouseMaterials.Count > 0)
                                                {
                                                    foreach (var item in Model.WarehouseMaterials)
                                                    {
                                                        <tr>
                                                            <td>@item.Material.Name</td>
                                                            <td>@item.Quantity</td>
                                                            <td>
                                                                <a class="btn btn-warning btn-sm" asp-action="Update" asp-route-id="@item.Id">
                                                                    <i class="fas fa-edit"></i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                                <tr>
                                                    <td>
                                                        <select asp-for="@Model.WarehouseMaterial.MaterialId" class="form-control" required>
                                                            @if (Model.Materials is not null)
                                                            {
                                                                <option value="">Lütfen ürün seçin</option>
                                                                @foreach (var item in Model.Materials)
                                                                {
                                                                    <option value="@item.Id">@item.Name</option>
                                                                }
                                                            }
                                                            else
                                                            {
                                                                <option value="">Hiçbir ürün yok</option>
                                                            }
                                                        </select>
                                                    </td>
                                                    <td>
                                                        <div class="m-0">
                                                            <input asp-for="@Model.WarehouseMaterial.Quantity" type="number" class="form-control" value="" required />
                                                        </div>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-secondary btn-sm">Kaydet</button>
                                        <a class="btn btn-warning btn-sm" asp-controller="Warehouse" asp-action="Index">İptal</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
    </div>
</section>



