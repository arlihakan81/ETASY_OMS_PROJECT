@model Product

@{
    ViewData["title"] = "Ürün Güncelle";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6"></div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home/Index">Anasayfa</a></li>
                    <li class="breadcrumb-item active">Ürün Güncelle</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<form action="/Product/Update" method="post">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    <!-- general form elements disabled -->
                    <div class="card card-warning">
                        <div class="card-header">
                            <h3 class="card-title">Ürün Güncelle</h3>
                        </div>
                        @if (TempData["error"] is not null)
                        {
                            <div class="alert alert-danger">
                                <i class="fas fa-close"></i>
                                <span>@TempData["error"]</span>
                            </div>
                        }
                        else if (TempData["success"] is not null)
                        {
                            <div class="alert alert-success">
                                <i class="fas fa-close"></i>
                                <span>@TempData["success"]</span>
                            </div>
                        }
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>Ürün Adı</label>
                                        <input asp-for="Name" type="text" class="form-control" required />
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Ürün Kodu</label>
                                        <input asp-for="Code" type="text" class="form-control" required />
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Ürün Ölçüsü</label>
                                        <input asp-for="Scale" type="text" class="form-control" required />
                                    </div>
                                </div>
                                <input asp-for="CreatedAt" type="hidden" />
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-secondary">Güncelle</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
    </section>
</form>



