@model List<Product>
@{
    ViewData["title"] = "Ürünlerimiz";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home/Index">Anasayfa</a></li>
                    <li class="breadcrumb-item active">@ViewData["title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">                
                <div class="card">
                    <div class="card-body">
                        <p>
                            <a href="/Product/Create" class="btn btn-secondary">
                                <i class="fas fa-plus"></i>
                                Yeni
                            </a>
                        </p>
                        @if(Model.Count > 0)
                        {
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Ürün kodu</th>
                                        <th>Ürün Adı</th>
                                        <th>Ölçüsü</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Code</td>
                                            <td>@item.Name</td>
                                            <td>@item.Scale</td>
                                            <td>
                                                <a class="btn btn-warning" href="/Product/Update/@item.Id">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a class="btn btn-danger" href="/Product/Delete/@item.Id">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                    
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Ürün kodu</th>
                                        <th>Ürün Adı</th>
                                        <th>Ölçüsü</th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                        }
                        else {
                            <div class="alert alert-danger">
                                <i class="fas fa-close"></i>
                                <span>Henüz kayıtlı hiçbir ürününüz yok</span>
                            </div>
                        }
                        
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->

