@model DetailOrderDetailModel

@{
	ViewData["title"] = "Sipariş Detayı";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6"></div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                    <li class="breadcrumb-item active">Sipariş Detayı</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <!-- Main content -->
                <div class="invoice p-3 mb-3">
                    <!-- title row -->
                    <div class="row">
                        <div class="col-12">
                            <h4>
                                <small class="float-right">@Model.Order.CreatedAt.ToShortDateString()</small>
                            </h4>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- info row -->
                    <div class="row invoice-info">
                        <div class="col-sm-4 invoice-col">
                            <address>
                                <strong>@Model.Order.Customer.Name</strong><br>
                                @Model.Order.Customer.Address    
                            </address>
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4 invoice-col">
                            <address></address>
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4 invoice-col">
                            <b>Sipariş FN #@Model.Order.FormId</b><br />
                            @if(Model.Order.Status != Status.Delivered)
                            {
                                <b>Termin Tarihi @Model.Order.DueDate.ToShortDateString()</b>
                            }
                            else
                            {
                                <b>Sevk Tarihi @Model.Order.UpdatedAt.ToShortDateString()</b>
                            }
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                    <!-- Table row -->

                    <div class="row">
                        <div class="col-12 table-responsive">
                            @if(Model.OrderDetails.Count > 0)
                            {
                                <table id="example1" class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Ürün Kodu</th>
                                            <th>Ürün Adı</th>
                                            <th>Adet</th>
                                            <th>Ölçü</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var item in Model.OrderDetails)
                                        {
                                            <tr>
                                                <td>@item.Product.Code</td>
                                                <td>@item.Product.Name</td>
                                                <td>@item.Quantity</td>
                                                <td>@item.Product.Scale</td>
                                                <td>
                                                @if(item.Order.Status != Status.Delivered)
                                                {
                                                    @if(User.FindFirstValue(ClaimTypes.Role) == Role.ExportUser.ToString()
                                                        || User.FindFirstValue(ClaimTypes.Role) == Role.DomesticUser.ToString())
                                                   {
                                                        <a asp-controller="OrderDetail" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a asp-controller="OrderDetail" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                   }  
                                                }                                   
                                                </td>
                                            </tr>
                                        }                                        
                                    </tbody>
                                </table>
                            }
                            else {
                                <div class="alert alert-danger">
                                    <i class="fas fa-exclamation-triangle"></i>
                                    Bu siparişe ait hiçbir ürün kaydı yok!
                                </div>
                            }                            
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.invoice -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

