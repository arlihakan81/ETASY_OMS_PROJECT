@using ETASY_OMS_PROJECT.WebUI.DAL.Concretes.Data;
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext context
<!-- Navbar -->
<nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
    </ul>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">                
        <!-- Messages Dropdown Menu -->
        <li class="nav-item dropdown">
            <a class="nav-link" data-toggle="dropdown" href="#">
                <i class="far fa-comments"></i>
                <span class="badge badge-danger navbar-badge">@context.NotifyUsers.Include(_ => _.User).Include(_ => _.Notification).Where(_ => _.IsRead == false && _.User.Name == User.Identity.Name).Count()
                </span>
            </a>
            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                @if (context.NotifyUsers.Any(_ => _.IsRead == false && _.User.Name == User.Identity.Name))
                {
                    foreach (var item in context.NotifyUsers.Include(_ => _.User)
                        .Include(_ => _.Notification).ThenInclude(_ => _.User)
                        .Where(_ => _.IsRead == false && _.User.Name == User.Identity.Name)
                        .OrderByDescending(_ => _.CreatedAt).Take(4))
                    {
                        <section class="dropdown-item">
                            <!-- Message Start -->
                            <div class="media">
                                <img src="~/dist/img/avatars/@item.Notification.User.Avatar" alt="User Avatar" class="img-size-50 mr-3 img-circle">
                                <div class="media-body">
                                    <h3 class="dropdown-item-title">
                                        @item.Notification.User.Name
                                        <span class="float-right text-sm text-danger">
                                            <a asp-controller="NotifyUser" asp-action="Read" asp-route-id="@item.Id">
                                                <i class="fas fa-book"></i>
                                            </a>
                                        </span>
                                    </h3>
                                    <p class="text-sm">@item.Notification.Description</p>
                                    @{ var diff = DateTime.Now.Minute - item.CreatedAt.Minute; }
                                    @if(Math.Abs(diff) < 60)
                                    {
                                        <p class="text-sm text-muted">
                                            <i class="far fa-clock mr-1"></i> 
                                            @Math.Abs(diff) dk önce
                                        </p>
                                    }
                                    else if (Math.Abs(diff) > 60)
                                    {
                                        <p class="text-sm text-muted">
                                            <i class="far fa-clock mr-1"></i>
                                            @Math.Abs(diff / 60) saat önce
                                        </p>
                                    }
                                    else if (Math.Abs(diff) >= 1440)
                                    {
                                        <p class="text-sm text-muted">
                                            <i class="far fa-clock mr-1"></i>
                                            @Math.Abs(diff / diff) gün önce
                                        </p>
                                    }
                                </div>
                            </div>
                            <!-- Message End -->
                        </section>
                        <div class="dropdown-divider"></div>
                    }
                    <a asp-controller="Notification" asp-action="Index" class="dropdown-item dropdown-footer">Tüm Bildirimleri Gör</a>
                }
                else
                {
                    <a class="dropdown-item">Okunmayan herhangi bir mesajınız yok!</a>
                    <a asp-controller="Notification" asp-action="Index" class="dropdown-item dropdown-footer">Tüm Bildirimleri Gör</a>
                }
            </div>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                <i class="fas fa-expand-arrows-alt"></i>
            </a>
        </li>
        <li class="dropdown">
            <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-expanded="false">
                Hoşgeldiniz, @User.Identity.Name <b class="caret"></b>
            </a>

            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" asp-controller="Account" asp-action="Update">Hesap Ayarları</a>
                <a class="dropdown-item" asp-controller="Account" asp-action="Reset">Parola Ayarları</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Oturumu Kapat</a>
            </div>
        </li>
    </ul>
</nav>
<!-- /.navbar -->