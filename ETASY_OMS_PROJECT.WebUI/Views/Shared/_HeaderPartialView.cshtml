@using ETASY_OMS_PROJECT.WebUI.DAL.Concretes.Data;
@inject ApplicationDbContext context
<!-- Navbar -->
<nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
    </ul>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">                
        <!-- Messages Dropdown Menu -->
        <li class="nav-item dropdown">
            <a class="nav-link" data-toggle="dropdown" href="#">
                <i class="far fa-comments"></i>
                <span class="badge badge-danger navbar-badge">@context.Notifications.Count()</span>
            </a>
            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                @if(context.Notifications.Count() > 0)
                {
                    foreach(var item in context.Notifications.OrderByDescending(_ => _.CreatedAt))
                    {
                        <a href="#" class="dropdown-item">
                            <!-- Message Start -->
                            <div class="media">
                                <img src="~/dist/img/avatars/@item.User.Avatar" alt="User Avatar" class="img-size-50 mr-3 img-circle">
                                <div class="media-body">
                                    <h3 class="dropdown-item-title">
                                        @item.User.Name
                                        <span class="float-right text-sm text-warning"><i class="fas fa-star"></i></span>
                                    </h3>
                                    <p class="text-sm">@item.Description</p>
                                    <p class="text-sm text-muted"><i class="far fa-clock mr-1"></i>@(DateTime.Now.Minute - item.CreatedAt.Minute) dk. önce </p>
                                </div>
                            </div>
                            <!-- Message End -->
                            
                        </a>
						<div class="dropdown-divider"></div>
                    }
                    <a href="/Notification/Index" class="dropdown-item dropdown-footer">Tüm Mesajları Gör</a>
                }
                else {
                    <a href="#" class="dropdown-item">
                        Okunmamış bir mesajınız yok!
                    </a>
                    <div class="dropdown-divider"></div>
                }                                                
            </div>
        </li>

        <li class="nav-item">
            <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                <i class="fas fa-expand-arrows-alt"></i>
            </a>
        </li>
        <li class="dropdown">
            <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-expanded="false">
                Hoşgeldiniz, @User.Identity.Name <b class="caret"></b>
            </a>

            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="/Account/Update">Hesap Ayarları</a>
                <a class="dropdown-item" href="/Account/Reset">Parola Ayarları</a>
                <a class="dropdown-item" href="/Account/Support">Yardım & Destek</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/Account/Logout">Çıkış Yap</a>
            </div>
        </li>
    </ul>
</nav>
<!-- /.navbar -->